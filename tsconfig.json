{
  "compilerOptions": {
    "target": "es6",             
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true,                   
    "module": "commonjs",                                
    "outDir": "./build",                            
    "esModuleInterop": true,                                              
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "noImplicitAny": true,                            
    "strictNullChecks": true,                         
    "noUnusedLocals": true,                           
    "noUnusedParameters": false,                  
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
